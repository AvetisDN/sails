<div class="container text-center">
    <h2>CREATE NEW</h2><br>
    <div class="row">
        <form action="/category/create" method="POST">
            <div class="col-md-6">
                <input class="form-control" type="text" name="title" placeholder="Title Post"><hr>
                <textarea rows="3" class="form-control" name="description" placeholder="Description"></textarea>
            </div>
            <div class="col-md-6">
                <input class="form-control" type="text" name="parent" value="1"><hr>
            </div>
            <div class="col-md-12">
                <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                <br><input type="submit" class="btn btn-success" value="CREATE" />
            </div>
        </form>
    </div><br>
    <h2>CATEGORY LIST</h2>
    <table class="table text-left">
        <tr>
            <th>ID</th>
            <th>TITLE</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        <% _.each(categories, function (category) { %>
        <tr>
            <td><%= category.id %></td>
            <td><%= category.title %></td>
            <td><a href="/category/watch/<%= category.id %>" class="btn btn-info">Look</a></td>
            <td><a href="/category/delete/<%= category.id %>" class="btn btn-danger">Delete</a></td>
            <td><a href="/admin/category/edit/<%= category.id %>" class="btn btn-warning">Edit</a></td>
        </tr>
        <% }) %>
    </table>
</div>
