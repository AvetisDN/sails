<div class="row">


    <div class="col s12">
        <ul>
            <% _.each(categories, function (category) { %>
                <% if (category.id != 1 && category.parent == 1) { %>
                <li>
                    <a href="/category/watch/<%= category.id %>">
                        <%= category.title %>
                    </a>
                    <% if (category.children.length) { %>
                        <%- partial('recursive.ejs', {parent_id: category.id}) %>
                    <% } %>
                </li>

                <% } %>
            <% }) %>
        </ul>
    </div>


</div>
